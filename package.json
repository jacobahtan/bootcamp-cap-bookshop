{
    "name": "bookshop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/audit-logging": "^5.3.0",
        "@sap/cds": "^5",
        "@sap/cds-dk": "^4.6.4",
        "@sap/cds-odata-v2-adapter-proxy": "^1.8.1",
        "@sap/cloud-sdk-vdm-business-partner-service": "^1.28.2",
        "@sap/hana-client": "^2.10.20",
        "@sap/xsenv": "^3.1.1",
        "@sap/xssec": "^3.2.10",
        "cors": "^2.8.5",
        "express": "^4",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.2.3",
        "@sap/ux-specification": "^1.90.15",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "sapux": [
        "app/catalog"
    ],
    "cds": {
        "requires": {
            "db": {
                "[development]": {
                    "kind": "sqlite"
                },
                "[production]": {
                    "kind": "hana"
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "features": {
            "fiori_preview": "true"
        }
    }
}
